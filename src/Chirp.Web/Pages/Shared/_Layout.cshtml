<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css" />
    <link rel="icon" type="image/png" href="/favicon/favicon.ico">
</head>

<body>
    <div class=page>
        <h1><a href="../../../"><img src="/images/icon1.png" alt="Icon1" /></a>Chirp!</h1>
        <div class=navigation>
            @if (User.Identity!.IsAuthenticated)
            {
                <div>
                    <a href="/@(User.Identity.Name)">my timeline</a> |
                    <a href="/">public timeline</a> |
                    <a href="/Saved">saved</a> |
                    <a href="/Following">following</a> |
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">About
                        me</a> |
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </div>
            }
            else
            {
                <div>
                    <a href="/">public timeline</a> |
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a> |
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            }
        </div>
        <div class=body>
            @RenderBody()
        </div>

        <div class=footer>
            Chirp &mdash; An ASP.NET Application
        </div>
    </div>
    <partial name="_LoginPartial" />
</body>
@await RenderSectionAsync("Scripts", required: false)

</html>